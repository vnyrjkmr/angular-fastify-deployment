{
  "AWSEBDockerrunVersion": "1",
  "Image": {
    "Name": "node:18-alpine",
    "Update": "true"
  },
  "Ports": [
    {
      "ContainerPort": 3000,
      "HostPort": 80
    }
  ],
  "Volumes": [
    {
      "HostDirectory": "/var/app/current",
      "ContainerDirectory": "/app"
    }
  ],
  "Command": "sh -c 'cd /app && npm install && npm start'"
}
